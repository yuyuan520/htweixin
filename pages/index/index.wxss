/**index.wxss**/
/* 搜索框 */
.location {
  width: 100%;
  height: 50rpx;
  background: #3e87fd;
  position: fixed;
  top: 0;
  z-index: 50;
  color: #fff;
  font-size: 28rpx;
}
.location image {
  width: 30rpx;
  height: 30rpx;
  margin-left:30rpx;
}
.search {
  position: fixed;
  top: 50rpx;
  z-index: 50;
  width: 100%;
  background: #3e87fd;
}
.search .search_icon {
  position: absolute;
  top: 20rpx;
  left: 48rpx;
}
.search input {
  height: 70rpx;
  background: #fff;
  color: #7f8590;
  border-radius: 40px;
  font-size: 30rpx;
  margin: 0 30rpx 15rpx;
  padding: 0 60rpx;
}
/* 导航 */
/* 隐藏滚动条 */
::-webkit-scrollbar{
  width:0;
  height: 0;
  color: transparent;
}
.nav_tab {
  position: relative;
  height: 80rpx;
  font-size: 34rpx;
  background: #fff;
  white-space: nowrap;
  border-bottom: 1px solid #dbdbdb;
  overflow: auto;
}
.nav_tab .nav_item {
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 40rpx;
  color: #333;
}
.nav_tab .nav_item:first-of-type {
  margin-left: 30rpx;
}
.nav_tab .nav_item.last {
  margin-right: 116rpx;
}
.nav_tab .nav_item.active {
  color: #fe8910;
}
.nav_tab .nav_item .red_dot {
  display:inline-block;
  width:12rpx;
  height:12rpx;
  background:#f72c2d;
  border-radius:100%;
  margin-bottom:24rpx;
}
/* 折叠的导航 */
.nav_tab .nav_fold {
  position:fixed;
  top:134rpx;
  right:0;
  height:80rpx;
  background:#fff;
  text-align:center;
}
.nav_tab .nav_fold image:first-of-type {
  width:50rpx;
  height:36rpx;
  padding:0 20rpx 0 20rpx;
  transform:translateY(22rpx);
  border-left:1px solid #dbdbdb;
}
.nav_tab .nav_fold image:last-of-type {
  width:36rpx;
  height:36rpx;
  padding:0 27rpx 0 28rpx;
  transform:translateY(22rpx);
  border-left:1px solid #dbdbdb;
  display: none;
}
/* 点击折叠的导航出现的隐藏内容 */
.nav_hide {
  position: fixed;
  width:100%;
  height: 100%;
  font-size:28rpx;
  background:#fff;
  box-shadow:0 2rpx 10rpx 0 rgba(153,153,153,.4);
  box-sizing:border-box;
  padding:30rpx 30rpx 60rpx 30rpx;
  border-bottom:1px solid #eee;
  display: none;
}
.nav_hide .nav_hide_title {
  margin-bottom: 40rpx;
  margin-top: 30rpx;
}
.nav_hide .nav_text {
  position: relative;
  display: inline-block;
  margin-bottom: 20rpx;
  margin-right: 95rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 4px;
  padding: 6px;
}
.nav_hide .nav_text.active {
  color: #fe8910;
}
.nav_hide .nav_text icon {
  position: absolute;
  right: -10rpx;
  top: -16rpx;
}
.nav_hide .publishDate {
  position:relative;
  display:inline-block;
  width:200rpx;
  margin-right:60rpx;
}
.nav_hide .publishDate icon {
  position: absolute;
  left: 180rpx;
  top: -16rpx;
  z-index: 10;
}
.nav_hide .startDate,.nav_hide .endDate {
  display: inline-block;
  color: #666;
  background: #f5f5f5;
  border-radius: 4px;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.nav_hide .startDate.active,.nav_hide .endDate.active {
  color: #fe8910;
}
.nav_hide .nav_hide_title:nth-of-type(2) {
  margin-top: 60rpx;
}


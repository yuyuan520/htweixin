/* 企政查询  */
.container {
  padding: 0 30rpx;
}
.search_block {
  width: 100%;
  height: 305rpx;
  background: #fff;
  margin: 30rpx 0 0;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx 8rpx rgba(215,215,215,.3);
}
.search_block .title {
  font-size: 42rpx;
  color: #333;
  font-weight: bold;
}
.search_block .small {
  font-size: 26rpx;
  background: #28b64d;
  color: #fff;
  border-radius: 20rpx;
  padding: 2rpx 10rpx;
  font-weight: normal;
  margin-left: 10rpx;
}
.search_block .summary {
  font-size: 26rpx;
  color: #666;
  padding: 10rpx 0 36rpx;
}
.serach_part {
  display: flex;
}
.search_block input {
  width: 534rpx;
  height: 80rpx;
  border: 1px solid #c8d6e0;
  font-size: 28rpx;
  border-radius: 14rpx 0 0 14rpx;
  padding: 0 0 0 16rpx;
  box-sizing: border-box;
  background: #f2f6f9;
  border-right: none;
}
.search_block .search_btn {
  width: 90rpx;
  height: 80rpx;
  line-height: 86rpx;
  border-radius: 0 14rpx 14rpx 0;
  background: #28b64d;
  margin-left: 0;
  text-align: center;
  padding: 0;
}
.search_block:nth-of-type(2) .small {
  background: #2f6bf0;
}
.search_block:nth-of-type(2) .search_btn {
  background: #2f6bf0;
}
/* pages/znts/znts.wxss */
/* 顶部联系部分 */
.contact_box {
  display: flex;
  width: 100%;
  height: 150rpx;
  background: #282828;
}
/* 顶部联系部分左边 */
.contact_l {
  color: #fff;
  margin: 0 30rpx;
}
.contact_l1 {
  font-size: 36rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.contact_l2 {
  font-size: 24rpx;
}
/* 顶部联系部分右边 */
.contact_r .contact_us {
  font-size: 28rpx;
  color: #fff;
  background: #3c86fa;
  border-radius: 80rpx;
  padding: 20rpx 40rpx;
  margin-top: 46rpx;
  line-height: 30rpx;
}
/* 表单部分 */
.form_part1 {
  width: 100%;
  background: #fff;
  margin-top: 15rpx;
  padding: 10prx 0;
}
.form_part1 input {
  width: 690rpx;
  height: 80rpx;
  border: 1px solid #c7d7e1;
  margin: 0 0 20rpx 30rpx;
  background: #f2f7f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0 0 0 20rpx;
  box-sizing: border-box;
}
.form_part1 input.first {
  margin-top: 30rpx;
}
.form_part1 .province,.form_part1 .city,.form_part1 .area {
  display: inline-block;
  width: 206rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #c7d7e1;
  background: #f2f7f8;
  border-radius: 8rpx;
  color: #82929f;
  font-size: 28rpx;
  margin: 0 30rpx 20rpx 0;
  padding: 0 0 0 20rpx;
  box-sizing: border-box;
}
.form_part1 .province {
  margin-left: 30rpx;
}
.form_part1 .znts_btn {
  width: 690rpx;
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  background: -webkit-linear-gradient(#fec983,#fa7924);
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.part2 {
  width: 100%;
  background: #fff;
  margin-top: 50rpx;
}
.part2 .big_title {
  padding: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.part2 .big_title text {
  font-size: 26rpx;
  font-weight: normal;
  color: #666;
  float: right;
}
/* 列表 */
.part2 .list {
  background: #fff;
}
.part2 .list7 {
  color: #999;
  margin-top: 244rpx;
}
.part2 .list navigator {
  padding: 35rpx 30rpx 40rpx;
  border-bottom: 1px solid #f3f3f3;
}
.part2 .list .title {
  display: block;
  font-size: 34rpx;
  color: #333;
  margin-bottom: 40rpx;
  line-height:16rpx;
}
.part2 .list .toTop {
  display: inline-block;
  padding: 2rpx 8rpx;
  font-size: 24rpx;
  color: #fff;
  background: #f72c2d;
  text-align: center;
  border-radius: 2px;
  margin-right: 20rpx;
}
.part2 .list .sbsj {
  font-size: 26rpx;
  color: #666;
}
.part2 .list .declaring {
  display: inline-block;
  padding: 2rpx 8rpx;
  font-size: 24rpx;
  color: #fff;
  background: #f66e2f;
  text-align: center;
  border-radius: 2px;
  margin-right: 20rpx;
}

.part2 .list .area {
  font-size: 24rpx;
  color: #999;
  margin: 0 40rpx 0 0;
}
.part2 .list .date {
  font-size: 24rpx;
  color: #999;
}